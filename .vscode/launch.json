    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Resolve",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/oas_cli/__main__.py",
            "console": "integratedTerminal",
            "args": [
                "resolve",
                "sample/contract.yaml",
                "output/resolved-contract.yaml",
            ]
        },
        {
            "name": "Debug Validate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/oas_cli/__main__.py",
            "console": "integratedTerminal",
            "args": [
                "validate",
                "sample/contract.yaml",
                "sample/ruleset.yaml",
                "output/result.txt",
                "--resolve-contract",
                "--output-format",
                "text",
            ]
        }
    ]
}